<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>SimpleIdentityServer.Manager.Client</Description>
    <TargetFrameworks>net461;netstandard2.0</TargetFrameworks>
    <AssemblyName>SimpleIdentityServer.Manager.Client</AssemblyName>
    <PackageId>SimpleIdentityServer.Manager.Client</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="DTOs\Requests\**" />
    <Compile Remove="ResourceOwners\**" />
    <Compile Remove="Scopes\**" />
    <EmbeddedResource Remove="DTOs\Requests\**" />
    <EmbeddedResource Remove="ResourceOwners\**" />
    <EmbeddedResource Remove="Scopes\**" />
    <None Remove="DTOs\Requests\**" />
    <None Remove="ResourceOwners\**" />
    <None Remove="Scopes\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.1" />
  </ItemGroup>
  
  <ItemGroup>  
    <ProjectReference Include="..\SimpleIdentityServer.Manager.Common\SimpleIdentityServer.Manager.Common.csproj" />
    <ProjectReference Include="..\..\SimpleIdServer\SimpleIdentityServer.Core\SimpleIdentityServer.Core.csproj" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net461' ">
    <Reference Include="System.Net.Http" />
    <Reference Include="System.Runtime.Serialization" />
    <Reference Include="System.Runtime" />
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

</Project>
