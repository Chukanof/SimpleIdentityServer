@{
    ViewBag.Title = "Index";
    ViewBag.ProductName = "Simple Identity Server";
}

@model SimpleIdentityServer.Api.ViewModels.AuthorizeViewModel

@section PageTitle
{
    <div class="page-header">
        <h1>
            Login
        </h1>
    </div>
}

<!-- Local login -->
<div class="col-md-6 col-sm-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Local Login</h3>
        </div>
        <div class="panel-body">
            <form name="form" method="POST" action="@Url.Action("Index")">
                <fieldset>
                    <input type="hidden" value="@Model.Code" name="Code" />
                    <div class="form-group">
                        <label>Username</label>
                        <input maxlength="100" class="form-control" value="@Model.UserName" name="UserName"/>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input maxlength="100" class="form-control" value="@Model.Password" name="Password" />
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="checkbox" value="@Model.IsChecked" name="IsChecked" />
                            <strong>Remember My login</strong>
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>

<!-- External logins -->
<div class="col-md-6 col-sm-6">
    
</div>
