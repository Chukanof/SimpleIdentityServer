{
  "version": "1.0.0-*",
  "description": "Simple identity server host",
  "authors": [ "Thierry Habart" ],
  "copyright": "Copyrigth Thierry Habart",
  "packOptions": {
    "tags": [ "" ],
    "licenseUrl": "",
    "projectUrl": ""
  },
  "title": "Simple identity server host",
  "dependencies": {
    "Microsoft.Extensions.FileProviders.Embedded": "1.0.0-*",
    "Microsoft.AspNetCore.Identity": "1.0.0-*",
    "Microsoft.AspNetCore.Authentication.Facebook": "1.0.0-*",
    "Microsoft.AspNetCore.Authentication.MicrosoftAccount": "1.0.0-*",
    "Microsoft.AspNetCore.Authentication.Cookies": "1.0.0-*",
    "Microsoft.AspNetCore.Mvc": "1.0.0-*",
    "Microsoft.AspNetCore.Mvc.Core": "1.0.0-*",
    "Microsoft.AspNetCore.Mvc.TagHelpers": "1.0.0-*",
    "Microsoft.AspNetCore.StaticFiles": "1.0.0-*",
    "Microsoft.AspNetCore.Diagnostics": "1.0.0-*",
    "Microsoft.AspNet.Tooling.Razor": "1.0.0-*",
    "Microsoft.Extensions.Primitives": "1.0.0-*",
    "Microsoft.Extensions.Configuration.FileProviderExtensions": "1.0.0-*",
    "Microsoft.Extensions.Configuration.Json": "1.0.0-*",
    "Microsoft.Extensions.Configuration.UserSecrets": "1.0.0-*",
    "Microsoft.Extensions.Logging": "1.0.0-*",
    "Microsoft.Extensions.Logging.Console": "1.0.0-*",
    "Microsoft.Extensions.Logging.Debug": "1.0.0-*",
    "Newtonsoft.Json": "8.0.4-*",
    "SimpleIdentityServer.Core": "*",
    "SimpleIdentityServer.Core.Jwt": "*",
    "SimpleIdentityServer.DataAccess.Fake": "*",
    "SimpleIdentityServer.DataAccess.SqlServer": "*",
    "SimpleIdentityServer.RateLimitation": "*"
  },
  "scripts": {
    "prebuild": [
      "npm install",
      "bower --allow-root install",
      "gulp clean",
      "gulp min"
    ],
    "postrestore": [ "npm install", "bower --allow-root install" ],
    "prepare": [ "gulp clean", "gulp min" ]
  },
  "frameworks": {
    "net46": {
      "frameworkAssemblies": {
        "System.Web": "4.0.0.0"
      }
    },
    "netcoreapp1.0": {
      "dependencies": {
        "Microsoft.AspNet.WebUtilities": "1.0.0-*",
        "System.Reflection": "4.1.0-*",
        "System.IO": "4.1.0-*"
      },
      "imports": [ "dnxcore50", "portable-net451+win8" ]
    }
  },
  "buildOptions": {
    "embed": [
      "SimpleIdentityServer.pfx",
      "Views/**",
      "wwwroot/output/**",
      "wwwroot/img/**",
      "wwwroot/fonts/**"
    ]
  },
  "publishOptions": {
    "exclude": [
      "**.user",
      "**.vspscc",
      "node_modules",
      "bower_components"
    ]
  },
  "configurations": {
    "Debug": {
      "compilationOptions": {
        "define": [ "DEBUG" ]
      }
    },
    "Release": {
      "compilationOptions": {
        "define": [ "RELEASE" ],
        "optimize": true
      }
    }
  }
}
