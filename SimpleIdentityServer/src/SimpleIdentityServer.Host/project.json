{
  "version": "1.0.0-*",
  "description": "Simple identity server host",
  "authors": [ "Thierry Habart" ],
  "copyright": "Copyrigth Thierry Habart",
  "projectUrl": "https://github.com/thabart/SimpleIdentityServer",
  "licenseUrl": "http://www.apache.org/licenses/",
  "tags": [ "OpenId", "Identity" ],
  "title": "Simple identity server host",
  "tooling": {
    "defaultNamespace": "SimpleIdentityServer.Host"
  },

  "dependencies": {
    "Microsoft.AspNet.FileProviders.Composite": "1.0.0-*",
    "Microsoft.AspNet.FileProviders.Embedded": "1.0.0-*",
    "Microsoft.AspNet.Identity.Core": "2.2.1",
    "Microsoft.AspNet.Authentication.MicrosoftAccount": "1.0.0-rc1-final",
    "Microsoft.AspNet.Authentication.Facebook": "1.0.0-rc1-final",
    "Microsoft.AspNet.Authentication.Cookies": "1.0.0-rc1-final",
    "Microsoft.AspNet.Identity": "3.0.0-beta5",
    "Microsoft.AspNet.IISPlatformHandler": "1.0.0-rc1-final",
    "Microsoft.AspNet.Mvc": "6.0.0-rc1-final",
    "Microsoft.AspNet.Mvc.TagHelpers": "6.0.0-rc1-final",
    "Microsoft.AspNet.StaticFiles": "1.0.0-rc1-final",
    "Microsoft.AspNet.Tooling.Razor": "1.0.0-rc1-final",
    "Microsoft.Extensions.Primitives": "1.0.0-rc1-final",
    "Microsoft.Extensions.CodeGenerators.Mvc": "1.0.0-rc1-final",
    "Microsoft.Extensions.Configuration.FileProviderExtensions": "1.0.0-rc1-final",
    "Microsoft.Extensions.Configuration.Json": "1.0.0-rc1-final",
    "Microsoft.Extensions.Configuration.UserSecrets": "1.0.0-rc1-final",
    "Microsoft.Extensions.Logging": "1.0.0-rc1-final",
    "Microsoft.Extensions.Logging.Console": "1.0.0-rc1-final",
    "Microsoft.Extensions.Logging.Debug": "1.0.0-rc1-final",
    "Microsoft.AspNet.Diagnostics": "1.0.0-rc1-final",
    "Microsoft.AspNet.WebApi.Client": "5.2.3",
    "Swashbuckle.SwaggerGen": "6.0.0-rc1-final",
    "Swashbuckle.SwaggerUi": "6.0.0-rc1-final",
    "WebActivatorEx": "2.0",
    "SimpleIdentityServer.Core": "",
    "SimpleIdentityServer.Core.Jwt": "",
    "SimpleIdentityServer.DataAccess.Fake": "",
    "SimpleIdentityServer.DataAccess.SqlServer": "",
    "SimpleIdentityServer.RateLimitation": ""
  },

  "frameworks": {
    "dnx451": {
      "frameworkAssemblies": {
        "System.Web": "4.0.0.0"
      }
    }
  },
  
  "scripts": {
    "prebuild": [
      "npm install",
      "bower --allow-root install",
      "gulp clean",
      "gulp min"
    ],
	  "postrestore": [ "npm install", "bower --allow-root install" ],
    "prepare": [ "gulp clean", "gulp min" ]
  },

  "exclude": [
    "node_modules",
    "bower_components"
  ],

  "publishExclude": [
    "**.user",
    "**.vspscc"
  ],

  "configurations": {
    "Debug": {
      "compilationOptions": {
        "define": [ "DEBUG" ]
      }
    },
    "Release": {
      "compilationOptions": {
        "define": [ "RELEASE" ],
        "optimize": true
      }
    }
  },

  "resource": [
    "SimpleIdentityServer.pfx",
    "Views/**",
    "wwwroot/output/**",
    "wwwroot/img/**",
    "wwwroot/fonts/**"
  ]
}
